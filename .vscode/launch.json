    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell: Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "$env:LocalDebugMode=1;${file}",
            "cwd": "${file}"
        },
        {
            "name": "PowerShell: Launch Current File In New Console",
            "type": "PowerShell",
            "request": "launch",
            "script": "$env:LocalDebugMode=1;${file}",
            "cwd": "${file}",            
            "createTemporaryIntegratedConsole": true
        }
    ]
}